<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zj.mybatis.mapper.BlogMapper">
	<!--  statement  -->
	<select id="selectBlog" parameterType="int" resultType="Blog">
		select * from Blog where id = #{id}
	</select>
	
	<select id="selectBlogByTitle" parameterType="string" resultType="Blog">
		select * from Blog where title like #{title}
	</select>
	
	<select id="selectBlogByTitle2" parameterType="string" resultType="Blog">
		select * from Blog where title like "${value}"
	</select>
	
	<select id="selectBlogOrderBySort" parameterType="string" resultType="Blog">
		select * from Blog order by ${value}
	</select>
	
	<select id="selectBlogByPage" resultType="Blog">
		select * from Blog limit #{0},#{1}
	</select>
	
	<select id="selectBlogByPage2" resultType="Blog">
		select * from Blog limit #{offeset},#{pagesize}
	</select>
	
	<select id="selectBlogByPage3" resultType="Blog">
		select * from Blog limit #{offeset},#{pagesize}
	</select>
	
	<insert id="insertBlog" parameterType="Blog" useGeneratedKeys="true" keyProperty="id">
		insert into Blog (title,authorId,state,featured,style)
		values (#{title},#{authorId},#{state},#{featured},#{style})
	</insert>
	
	<insert id="insertBlogOracle" parameterType="Blog">
		<selectKey resultType="java.lang.Integer" order="BEFORE" keyProperty="id">
			select seq.nextval as id from dual
		</selectKey>
		insert into Blog (title,authorId,state,featured,style)
		values (#{title},#{authorId},#{state},#{featured},#{style})
	</insert>
	
	<update id="updateBlog" parameterType="Blog">
		update Blog set title = #{title},
						authorId = #{authorId},
						state = #{state},
						featured =  #{featured},
						style = #{style}
				where id = #{id}
	</update>
	
	<delete id="deleteBlogById" parameterType="int">
		delete from blog where id=#{id}
	</delete>
	
	
	<!-- 定义存储过程 -->
    <select id="callProcedure" statementType="CALLABLE" resultType="java.lang.Integer">
      call select_blog()
  	</select>

</mapper>