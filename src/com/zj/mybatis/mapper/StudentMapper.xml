<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zj.mybatis.mapper.StudentMapper">
	
	<resultMap type="Student" id="studentResultMap">
		<id column="sid" property="id" jdbcType="INTEGER"></id>
		<id column="sname" property="name" jdbcType="VARCHAR"></id>
		<id column="cid" property="cid" jdbcType="INTEGER"></id>
	</resultMap>
	
	<select id="selectStudentByCid" parameterType="int" resultMap="studentResultMap">
		select * from Students where cid = #{id}
	</select>
</mapper>