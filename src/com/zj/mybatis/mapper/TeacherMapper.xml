<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zj.mybatis.mapper.TeacherMapper">
	
	<resultMap type="Teacher" id="teacherResultMap">
		<id column="tid" property="id" jdbcType="INTEGER"></id>
		<id column="tname" property="name" jdbcType="VARCHAR"></id>
		<association property="classes" column="cid" javaType="Classes"
		 select="com.zj.mybatis.mapper.ClassesMapper.selectClassesById"></association>
	</resultMap>
	
	<select id="selectTeacherById" parameterType="int" resultMap="teacherResultMap">
		select * from Teacher where tid = #{id}
	</select>
	
	<select id="selectTeachers"  resultMap="teacherResultMap">
		select * from Teacher
	</select>
</mapper>