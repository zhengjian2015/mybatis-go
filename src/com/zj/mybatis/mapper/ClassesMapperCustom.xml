<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zj.mybatis.mapper.ClassesMapperCustom">
	
	<sql id="baseColumn">
		a.cid as id,
		a.cname as name,
		b.tname as teacherName
	</sql>
	
	<select id="selectClassesById" parameterType="int" resultType="ClassesCustom">
		select
			<include refid="baseColumn"></include>
			from classes a
			left join teacher b
			on a.cid = b.cid
			where a.cid = #{id}
	</select>
</mapper>