<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<BorderPane fx:controller="com.example.demo.MainController" xmlns:fx="javafx">
    <center>
        <SplitPane orientation="VERTICAL">
            <VBox spacing="10">
                <!--边距-->
                <padding>
                    <Insets topRightBottomLeft="10"/>
                </padding>
                <Label text="文本内容:" />
                <TextArea VBox.vgrow="ALWAYS" fx:id="txtSource"/>
            </VBox>
            <VBox spacing="10">
                <padding>
                    <Insets topRightBottomLeft="10"/>
                </padding>
                <Label text="Base64编码:" />
                <TextArea VBox.vgrow="ALWAYS" fx:id="txtBase64" editable="false" wrapText="true"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
